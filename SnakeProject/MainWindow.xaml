<Window x:Class="SnakeProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnakeProject"
        mc:Ignorable="d" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen" 
        Width="865" Height="660"
        Title="Snake">
    <Grid x:Name="MainGrid">
        <Grid x:Name="SnakeGrid" Background="Black" Width="600" Height="600" Margin="10,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Grid HorizontalAlignment="Left" Height="600" Margin="615,10,0,0" VerticalAlignment="Top" Width="229">
            <Label x:Name="Score" Content="Score: 0" HorizontalAlignment="Left" Margin="10,549,0,0" VerticalAlignment="Top" Height="41" Width="373" FontSize="20"/>
            <Button x:Name="NewGame" Content="New Game" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="211" Height="78" FontSize="26.667" Click="NewGame_Click"/>
        </Grid>
    </Grid>
</Window>
